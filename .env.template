# E2B Environment Configuration
# This file ensures parity between sandbox and production environments

# Application Settings
APP_NAME=e2b
APP_VERSION=2.8.4
APP_ENVIRONMENT=${ENVIRONMENT:-production}

# Build Configuration
BUILD_TARGET=${BUILD_TARGET:-production}
BUILD_OPTIMIZATION=${BUILD_OPTIMIZATION:-true}

# Sandbox Configuration
SANDBOX_ENABLED=${SANDBOX_ENABLED:-false}
SANDBOX_MIRROR_PRODUCTION=${SANDBOX_MIRROR_PRODUCTION:-true}
SANDBOX_ISOLATED=${SANDBOX_ISOLATED:-true}

# API Configuration
API_TIMEOUT=${API_TIMEOUT:-30}
API_RETRY_ATTEMPTS=${API_RETRY_ATTEMPTS:-3}
API_RATE_LIMIT=${API_RATE_LIMIT:-100}

# Error Handling
ERROR_REPORTING_ENABLED=${ERROR_REPORTING_ENABLED:-true}
ERROR_VERBOSE=${ERROR_VERBOSE:-false}
ERROR_STACK_TRACES=${ERROR_STACK_TRACES:-true}

# Testing Configuration
TEST_COVERAGE_THRESHOLD=${TEST_COVERAGE_THRESHOLD:-80}
TEST_PARALLEL_WORKERS=${TEST_PARALLEL_WORKERS:-4}
TEST_TIMEOUT=${TEST_TIMEOUT:-300}

# Logging
LOG_LEVEL=${LOG_LEVEL:-info}
LOG_FORMAT=${LOG_FORMAT:-json}
LOG_DESTINATION=${LOG_DESTINATION:-stdout}

# Security
SECURITY_SCAN_ENABLED=${SECURITY_SCAN_ENABLED:-true}
VULNERABILITY_CHECK_ENABLED=${VULNERABILITY_CHECK_ENABLED:-true}

# Performance
PERFORMANCE_MONITORING=${PERFORMANCE_MONITORING:-true}
METRICS_COLLECTION=${METRICS_COLLECTION:-true}
